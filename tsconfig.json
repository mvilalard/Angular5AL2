{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "noEmit": true,
        "jsx": "react",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node"
      },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}